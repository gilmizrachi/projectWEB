                                </div>
                            </div><!-- end image-wrap -->
                        </div>
                    </div><!-- end row -->
                </div><!-- end col -->

                <div class="col-md-6">
                    <div class="shop-desc">
                        <h3>@Html.DisplayFor(modelItem => item.ItemName)</h3>
                        <small>@Html.DisplayFor(modelItem => item.price)</small>
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        @if (ViewBag.membertype == "SalesPerson")
                        {<a asp-action="Edit" asp-route-id="@Model.FirstOrDefault().id">Edit</a>}
                        <div class="shop-meta">
                            <button type="button" id="AddToCart" asp-controller="Transactions" asp-action="Addtocart" asp-route-id="@Model.FirstOrDefault().id" class="btn btn-primary"> Add To Cart</button>
                            <ul class="list-inline">
                                <li> SKU: product-111</li>
                                <li>Categories: <a asp-action="Search" name="Phrase" id="Phrase" value="@Model.FirstOrDefault().ItemDevision.ToString()">@Html.DisplayFor(modelItem => item.ItemDevision)</a>
                            </ul>
                        </div><!-- end shop meta -->
                    </div><!-- end desc -->
                </div><!-- end col -->
            </div><!-- end row -->

            <hr class="invis">

            <div class="row">
                <div class="col-md-12">
                    <div class="shop-extra">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#home">Description</a></li>
                            <li><a data-toggle="tab" href="#menu1">Reviews</a></li>
                            <!--<li><a data-toggle="tab" href="#menu2">Reviews (2)</a></li>-->

                        </ul>

                        <div class="tab-content">
                            <div id="home" class="tab-pane fade in active">
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>

                                <p>Bullshit, Bullshit </p>
                            </div>
                            <div id="menu1" class="tab-pane fade">
                                <h3>Customers Reviews</h3>
                                <div id="comment-section">

                                </div>
                                <input style="display:none" type="submit" id="getComments" asp-controller="Reviews" asp-action="Get" asp-route-id="@Model.FirstOrDefault().id" />
                                <button id="New" type="button" data-toggle="tab" href="#menu2" class="btn btn-primary">New Review</button>

                                <div id="menu2" class="tab-pane fade">
                                    <h3>Reviews</h3>

                                    <p>Your email address will not be published. Required fields are marked *</p>
                                    <p>Your Rating</p>
                                    <div class="rating">
                                        <i id="star1" value="1" class="fa fa-star ratings_stars" data-rating="1"></i>
                                        <i id="star2" value="2" class="fa fa-star ratings_stars" data-rating="2"></i>
                                        <i id="star3" value="3" class="fa fa-star ratings_stars" data-rating="3"></i>
                                        <i id="star4" value="4" class="fa fa-star ratings_stars" data-rating="4"></i>
                                        <i id="star5" value="5" class="fa fa-star ratings_stars" data-rating="5"></i>
                                    </div>

                                    <br />
                                    <input id="rating" style="display:none" />


                                    <hr class="invis">

                                    <form class="big-contact-form row" role="search">
                                        <div class="col-md-12">
                                            <input type="text" name="CommentTitle" id="CommentTitle" class="form-control" placeholder="In a nutshell.."/>
                                            <textarea name="CommentBody" id="CommentBody" class="form-control" placeholder="Your reviews.."></textarea>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="username" disabled class="form-control" value="@ViewBag.username" placeholder="@ViewBag.username">
                                        </div>
                                        <div class="col-md-6">
                                            <input type="email" id="email" disabled class="form-control" value="@ViewBag.email" placeholder="@ViewBag.email">
                                            <input type="text" id="ItemId" style="display:none" value="@Html.DisplayFor(modelItem => item.id)" />
                                        </div>
                                        <div class="col-md-12">
                                            <button type="button" id="sendReview" value="@ViewBag.id" class="btn btn-primary">Submit</button>
                                            <input style="display:none" type="submit" id="send" asp-controller="Reviews" asp-action="Create" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                    </div><!-- end shop-extra -->

                </div><!-- end col -->
            </div><!-- end row -->

            <hr class="invis">

            <div class="related-products">
