@model projectWEB.ViewModels.CheckoutViewModel

@if (Model != null)
{
    Model.PageTitle = "PP.Checkout.Title";
    Model.PageDescription = "PP.Checkout.Description";
    Model.PageURL = Url.Checkout();
    Model.PageImageURL = PictureHelper.PageImageURL("checkout.jpg");

    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text product-more">
                        <a href="@Url.Home()">
                            <i class="fas fa-home mr-1"></i>
                            @("PP.Header.Menu.Home")
                        </a>
                        <span>@Model.PageTitle</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="page-content-holder">
                        <div class="page-content-header">
                            <h2>@Model.PageTitle</h2>
                            <p>
                                @Model.PageDescription
                            </p>
                        </div>
                        <div id="checkout-holder">
                            @{Html.RenderPartial("_Checkout", Model);}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}