@model IEnumerable<projectWEB.Data.Item>

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_shopLayout.cshtml"; }

    <div class="boxed boxedp4" style="margin: auto 20%;">

        @*<div id="map"></div>*@

        <div class="mapouter" style="margin: auto !important; margin-top: 5% !important;">
            <select id="branches" style="position: relative; right: 60%;  margin-bottom: 21px;">
                <option value="0">choose a branch</option>
                @foreach (var branch in ViewBag.branches)
                {
                    <option value="@branch.address">@branch.address</option>
                }
            </select>
            <div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://www.google.com/maps?q=israel&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://2piratebay.org">pirate bay</a></div>
        </div>

        <div class="row contactv2 text-center">
            <div class="col-md-4">
                <div class="small-box">
                    <i class="flaticon-email wow fadeIn" style="visibility: visible; animation-name: fadeIn;"></i>
                    <h4>Contact us today</h4>
                    <small>Phone: +972 987 665 55 4</small>
                    <small>Fax:  +972 987 665 55 5</small>
                    <p><a href="mail:to">info@colmancourse.com</a></p>
                </div><!-- end small-box -->
            </div><!-- end col -->

            <div class="col-md-4">
                <div class="small-box">
                    <i class="flaticon-map-with-position-marker wow fadeIn" style="visibility: visible; animation-name: fadeIn;"></i>
                    <h4>Visit Our Office</h4>
                    <small>PO Box 16122 Jerusalem Street West</small>
                    <small>King David 8007 Israel</small>
                    <p><a href="#">View on Google Map</a></p>
                </div><!-- end small-box -->
            </div><!-- end col -->

            <div class="col-md-4">
                <div class="small-box">
                    <i class="flaticon-share wow fadeIn" style="visibility: visible; animation-name: fadeIn;"></i>
                    <h4>Be Social</h4>
                    <small>Facebook: facebook.com/colmanproject</small>
                    <p><a href="#">Email Newsletter</a></p>
                </div><!-- end small-box -->
            </div><!-- end col -->
        </div><!-- end contactv2 -->

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="section-title text-center">
                    <h3>Contact Form</h3>
                </div><!-- end title -->

                <form class="big-contact-form" role="search">
                    <input type="text" class="form-control" placeholder="Enter your name..">
                    <input type="email" class="form-control" placeholder="Enter email..">
                    <input type="text" class="form-control" placeholder="Your phone..">
                    <input type="text" class="form-control" placeholder="Subject..">
                    <textarea class="form-control" placeholder="Message goes here.."></textarea>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div><!-- end col -->
        </div><!-- end row -->
    </div>
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js" charset="utf-8"></script>
    <script src="jquery.simpleWeather.js" charset="utf-8"></script>

    <script type="text/javascript">
        $('#branches').on('change', function () {
            $('#gmap_canvas').attr('src', 'https://www.google.com/maps?q=' + $(this).val() + '&output=embed');
            var city = $(this).val().split(',')[1];
        });
    </script>
   
}