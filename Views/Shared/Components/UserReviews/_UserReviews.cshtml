@model projectWEB.ViewModels.REviewsListingViewModel

<div class="row mt-2">
    <div class="col-md-12">
        <form method="post" id="searchForm">
            <div class="input-group">
                <input name="searchTerm" type="text" value="@Model.SearchTerm" class="form-control" placeholder="@("PP.UserProfile.UserReview.SearchCommentsPlaceholder")">
                <button id="searchBtn" type="button" class="form-control btn btn-primary"><i class="fas fa-search mr-1"></i> @("PP.UserProfile.UserReview.SearchComments")</button>
                <a data-href="@Url.UserReviews()" role="button" class="text-white form-control btn btn-primary dataLink"><i class="fas fa-redo-alt mr-1"></i> @("PP.UserProfile.UserReview.Reset")</a>
            </div>
            <input type="hidden" name="page" value="1">
            <input type="hidden" name="items" value="10">
        </form>
    </div>
    <div class="col-lg-12 my-2">
        @{Html.RenderPartial("_UserReviewsListing", Model);}
    </div>
</div>
