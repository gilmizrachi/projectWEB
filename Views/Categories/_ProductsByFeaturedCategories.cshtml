@model projectWEB.ViewModels.ProductsByFeaturedCategoriesViewModel

@if (Model != null && Model.Categories != null && Model.Categories.Count > 0)
{
    var reverse = false;

    foreach (var featuredCategory in Model.Categories)
    {
        var currentLanguageCategoryRecord = featuredCategory.CategoryRecords.FirstOrDefault(x => x.LanguageID ==1);

        var products = featuredCategory.Products != null ? featuredCategory.Products.Where(x => !x.IsDeleted).OrderByDescending(x => x.ModifiedOn).Take(8).ToList() : null;

        <section class="@(reverse ? "reverse-banner" : "forward-banner") spad d-none d-sm-block">
            <div class="container-fluid">
                <div class="row">
                    @if (reverse)
                    {
                        <div class="col-lg-8">
                            @if (products != null && products.Count > 0)
                            {
                                Html.RenderPartial("_ProductsSlider", products);
                            }
                            else
                            {
                                <div class="alert alert-warning m-0" role="alert">
                                    @("PP.Search.ProductsNotFound")
                                </div>
                            }
                        </div>
                        <div class="col-lg-4" title="@("PP.Home.FeaturedCategories.BrowseCategoryProducts".Replace("{category}", currentLanguageCategoryRecord != null ? currentLanguageCategoryRecord.Name : null))">
                            <div class="product-large set-bg d-flex justify-content-center align-items-center" data-setbg="@Html.PictureSource(picture: featuredCategory.Picture, defaultPic: "site/default-bg.jpg")">
                                <div>
                                    <h2>
                                        @(currentLanguageCategoryRecord != null ? currentLanguageCategoryRecord.Name : string.Empty)
                                    </h2>
                                    <a href="@Url.SearchProducts(category:featuredCategory.SanitizedName)">@("PP.Home.FeaturedCategories.DiscoverMoreProducts")</a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-4 " title="@("PP.Home.FeaturedCategories.BrowseCategoryProducts".Replace("{category}", currentLanguageCategoryRecord != null ? currentLanguageCategoryRecord.Name : string.Empty))">
                            <div class="product-large px-3 set-bg d-flex justify-content-center align-items-center" data-setbg="@Html.PictureSource(picture: featuredCategory.Picture, defaultPic: "site/default-bg.jpg")">
                                <div>
                                    <h2>
                                        @(currentLanguageCategoryRecord != null ? currentLanguageCategoryRecord.Name : string.Empty)
                                    </h2>
                                    <a href="@Url.SearchProducts(category:featuredCategory.SanitizedName)">@("PP.Home.FeaturedCategories.DiscoverMoreProducts")</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            @if (products != null && products.Count > 0)
                            {
                                Html.RenderPartial("_ProductsSlider", products);
                            }
                            else
                            {
                                <div class="alert alert-warning m-0" role="alert">
                                    @("PP.Search.ProductsNotFound")
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </section>

        reverse = !reverse;
    }
}