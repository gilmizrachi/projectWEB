@model projectWEB.ViewModels.PageViewModel

<div id="preloder">
    <div class="loader"></div>
</div>

@{
    if (Model != null)
    {
        Model.PageTitle = "PP.Home.Title";
        Model.PageDescription = "PP.Home.Description";
        Model.PageURL = Url.Home();
        Model.PageImageURL = PictureHelper.PageImageURL("home.jpg");
    }


    <div class="d-flex justify-content-end">
        <div class="col-lg-9 pr-md-0">
            @await Component.InvokeAsync("HomeSliders")
            @await Component.InvokeAsync("FeaturedCategories", new { recordSize = 3, isForHomePage = true }); }

        </div>
    </div>

    @*<div class="col-lg-12">
            <div class="section-title">
                <strong>@("PP.Header.Menu.Products".Localized())</strong>
            </div>
        </div>*@

    @await Component.InvokeAsync("ProductsByFeaturedCategories", new { recordSize = 3 });

}
<div id="mobileCategory">
    @{
        @await Component.InvokeAsync("RelatedProducts", new { categoryID = 0, recordSize = projectWEB.Shared.Enums.RecordSizeEnums.Size12 });
    }

    <div class="sidebar-nav mx-2">
        @await Component.InvokeAsync("CategoriesMenuMobile");}
    </div>
</div>

<div class="container-fluid my-4 pb-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="loading-more">
                <i class="fas fa-search"></i>
                <a href="@Url.SearchProducts()">
                    @("PP.Home.SearchMoreProducts")
                </a>
            </div>
        </div>
    </div>
</div>

