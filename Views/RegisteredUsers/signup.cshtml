@model projectWEB.Models.RegisteredUsers

@{
    Layout = "_LoginLayout";
}

<h1>SignUp</h1>

<!-- Start Sign In Form class="fh5co-form animate-box" -->
<form asp-action="Signup" class="fh5co-form" data-animate-effect="fadeIn" onkeydown = "return (event.keyCode!=13);">
    <h2>Sign Up</h2>

    <div class="alert alert-success alert-dismissible" style="display:none">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong>Your info has been saved.
    </div>
        <div class="form-group" id="undiv">
            <label for="name" class="sr-only">Name</label>
            <input asp-for="UserName" class="form-control" id="User-Name" placeholder="Name" autocomplete="off" required name="Username">
            <span asp-validation-for="UserName" class="text-danger" id="unspa"></span>
        </div>
        <div class="form-group" id="emdiv">
            <label for="email" class="sr-only">Email</label>
            <input asp-for="Email" class="form-control" id="email" placeholder="Email Address" autocomplete="off" required type="email">
            <span asp-validation-for="Email" class="text-danger" id="emspa"></span>
        </div>
        <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input asp-for="Password" class="form-control" id="password" placeholder="Password" autocomplete="off" required type="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="re-password" class="sr-only">Re-type Password</label>
            <input type="password" class="form-control" id="re-password" placeholder="Re-type Password" autocomplete="off" required>
            <span  class="" id="repass"></span>
        </div>

        <div class="form-group">
            <p>Already registered? <a asp-action="login">Sign In</a></p>
        </div>
        <div class="form-group">
            <input type="button" value="Sign Up" class="btn btn-primary" id="register">
            <input type="submit" value="Sign Up" class="btn btn-primary" style="display:none" >
        </div>
</form>
<!-- END Sign In Form -->
<script id="rendered-js">
    var password = document.getElementById("password"),
        confirm_password = document.getElementById("re-password");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;

</script>
@section Scripts {
    <script type="text/javascript" src="~/js/PswCompare.js"></script>   
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}