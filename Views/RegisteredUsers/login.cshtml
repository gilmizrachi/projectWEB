@model projectWEB.Models.RegisteredUsers
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<h1>Login</h1>
<form asp-action="login" class="fh5co-form animate-box" data-animate-effect="fadeIn">
    <h2>Sign In</h2>
    <div class="form-group">
        <label for="Username" class="sr-only">Username</label>
        <input asp-for="UserName" class="form-control" id="Username" placeholder="Username" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="Password" class="sr-only">Password</label>
        <input asp-for="Password" class="form-control" id="Password" placeholder="Password" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="remember"><input type="checkbox" id="remember"> Remember Me</label>
    </div>
    <div class="form-group">
        <p>Not registered? <a asp-action="signup">Sign Up</a> | <a href="forgot.html">Forgot Password?</a></p>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign In" class="btn btn-primary">
    </div>
</form>
<!-- END Sign In Form -->
