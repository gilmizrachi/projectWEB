@model projectWEB.ViewModels.LoginViewModel
@{
    Model.PageTitle = "PP.Login.Title";
    Model.PageDescription = "PP.Login.Description".Replace("{application}", ConfigurationsHelper.ApplicationName);
    Model.PageURL = Url.Login();
    Model.PageImageURL = PictureHelper.PageImageURL("login.jpg");
}
@inject SignInManager<RegisteredUsers> SignInManager
@inject UserManager<RegisteredUsers> UserManager
<div class="register-login-section spad">
    <div class="container" id="login-container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form page-content-holder">
                    <div class="page-content-header">
                        <h2>@Model.PageTitle</h2>
                    </div>
                    @Html.Partial("_Login", Model)
                    <div class="switch-login">
                        <a href="/RegisteredUsers/Register" class="or-login">
                            @("PP.Login.RegisterAccount")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
